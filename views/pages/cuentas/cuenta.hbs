{{> header}}
<br>
<h1 class="display-3">Agregar cuenta de cliente: </h1>
<br>
<dir class="row justify-content-md-center">
    <div class="col-md-4" style="margin-top:50px">
        <form action="/cuentas" method="post">
         <input type="hidden" name="_id" class="form-control" value="{{cuenta._id}}">
            <div class="form-group">
                Agregar Cliente ID existente
                <input type="text" name="clienteID" class="form-control" value="{{cuenta.clienteID}}" required>
            </div>
            <div class="form-group">
                Numero de la cuenta
                <input type="text" name="numeroCuenta" class="form-control" value="{{cuenta.numeroCuenta}}" required>
            </div>
            <div class="form-group">
                Depositar saldo
                <input type="text" name="saldo" class="form-control" value="{{cuenta.saldo}}" required>
            </div>
             <center><button type="submit" class="btn btn-info btn-lg">Guardar</button></center>
        </form>
    </div>
</dir>